{
  "name": "promptlint",
  "version": "0.1.8",
  "description": "Real-time prompt correction with AI-powered personalized learning",
  "type": "module",
  "main": "dist/main/index.js",
  "author": "philokalos",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "dev:electron": "npm run build:all && electron .",
    "build": "tsc && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json && (mv dist/preload/index.js dist/preload/index.cjs 2>/dev/null || true)",
    "build:renderer": "vite build",
    "build:analysis": "npx tsx scripts/build-analysis.ts",
    "build:all": "npm run build:analysis && npm run build:main && npm run build:preload && npm run build:renderer",
    "preview": "vite preview",
    "start": "electron .",
    "pack": "NODE_ENV=production npm run build:all && electron-builder --dir",
    "dist": "NODE_ENV=production npm run build:all && electron-builder",
    "dist:mac": "NODE_ENV=production npm run build:all && electron-builder --mac",
    "dist:win": "NODE_ENV=production npm run build:all && electron-builder --win",
    "generate-icons": "npx tsx scripts/generate-icons.ts",
    "screenshots": "node scripts/capture-screenshots.mjs",
    "screenshots:auto": "npx tsx scripts/generate-screenshots-auto.ts",
    "screenshots:manual": "npx tsx scripts/screenshot-helper.ts",
    "screenshots:mode": "SCREENSHOT_MODE=true npm run dev:electron",
    "lint": "eslint src scripts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "better-sqlite3": "^12.5.0",
    "diff": "^8.0.2",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.469.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.11",
    "@types/diff": "^7.0.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/sharp": "^0.31.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.17",
    "electron": "^37.7.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "playwright": "^1.57.0",
    "postcss": "^8.4.33",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^5.0.12",
    "vitest": "^4.0.16"
  },
  "build": {
    "appId": "com.mtmd.promptlint",
    "productName": "PromptLint",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "philokalos",
      "repo": "prompt-evolution",
      "releaseType": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/analysis",
        "to": "analysis",
        "filter": [
          "**/*.cjs"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "assets/icons/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/icon.icns",
      "entitlements": "certs/entitlements.mac.plist",
      "entitlementsInherit": "certs/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity": null,
      "minimumSystemVersion": "12.0",
      "target": [
        {
          "target": "mas",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "type": "distribution"
    },
    "mas": {
      "entitlements": "certs/entitlements.mas.plist",
      "entitlementsInherit": "certs/entitlements.mas.inherit.plist",
      "hardenedRuntime": false,
      "identity": null,
      "type": "distribution",
      "minimumSystemVersion": "12.0"
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icons",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
